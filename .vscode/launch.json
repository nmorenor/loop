    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Loop",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/examples/browser/src-gen/backend/main.js",
            "args": [
                "--hostname=0.0.0.0",
                "--port=3000",
                "--config=${workspaceFolder}/app-config.json"
            ],
            "env": {
                "NODE_ENV": "development",
            },
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}
